<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_watch_next_img"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/watchnextimg" />

    <TextView
        android:id="@+id/tv_watch_next_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        android:text=" 13:07 "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_watch_next_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toRightOf="@+id/iv_watch_next_img"
        android:text="Washington Wachira"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/tv_watch_next_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_watch_next_name"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toRightOf="@id/iv_watch_next_img"
        android:text="For the love of birds"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold" />


</RelativeLayout>